<%- include('../partials/nav') %>

<section>
	<p><%= meetUp.owner.name %> says:
    <br>
  <label>Subject:</label>
  <%= meetUp.subject %>
  <br>
  <label>Details:</label>
  <%= meetUp.details %>
</p>

<% if (meetUp.owner.equals(user?.profile._id)) { %>
  <form action="/meetUps/<%= meetUp._id %>/edit" method="GET">
    <button class="btn" type="submit">Edit Post ✏️</button>
  </form>
  <form action="/meetUps/<%= meetUp._id %>?_method=DELETE" method="POST">
    <button class="btn" type="submit">Delete Post 🗑</button>
  </form>
<% } %>
</section>
